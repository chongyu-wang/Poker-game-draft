<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="table">
        <% for (let i = 0; i < cards.length; i++) { %>
            <img class="card" src= "PNG-cards-1.3/<%= cards[i].filename %>" alt="">

        <% } %>

    </div>


    <div class = "seats">
        <div class="players">
            <% for (let i = 0; i < players.length; i++) { %>
                <div class="player">
                    <div class="hand">
                        <% if (players[i].hand && !players[i].folded) { %>
                        <img class="card" src= "PNG-cards-1.3/<%= players[i].hand.card1.filename %>" alt="">
                        <img class="card" src= "PNG-cards-1.3/<%= players[i].hand.card2.filename %>" alt="">
                        <% } %>
                    </div>
                    <% if (players[i] === currentplayer) { %>
                        <div class="profile current-turn">
                            <h1> <%= players[i].name %></h1>
                            <h3>Chips: <%= players[i].cash %></h3>
                            <h3><%= players[i].button %></h3>
                            <% if (players[i].ranking) { %>
                                <h3><%= players[i].ranking.name %></h3>
                            <% } %>
                            <% if (players[i].folded) { %>
                                <h3>Folded</h3>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="profile">
                            <h1> <%= players[i].name %></h1>
                            <h3>Chips: <%= players[i].cash %></h3>
                            <h3><%= players[i].button %></h3>
                            <% if (players[i].ranking) { %>
                                <h3><%= players[i].ranking.name %></h3>
                            <% } %>
                            <% if (players[i].folded) { %>
                                <h3>Folded</h3>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>

    <div class="pot">
        <h1>Pot: <%= potAmount %></h1>
    </div>

    <form method="POST" action="/" class="decision">
        <% if (!curBet) { %>
            <button type="submit" name="buttonPressed" value="Check">Check</button>
        <% } %>
        <% if (curBet) { %>
            <button type="submit" name="buttonPressed" value="Call">Call</button>
        <% } %>
        <button type="submit" name="buttonPressed" value="Raise">Raise</button>
        <button type="submit" name="buttonPressed" value="Fold">Fold</button>
        <h1><%= currentplayer.name %></h1>
        <h1><%= choice %></h1>
    </form>
    <form method="POST" action="/" class="admin-decision">
        <button type="submit" name="adminButton" value="Initialize">Initialize</button>
        <button type="submit" name="adminButton" value="Deal">Deal</button>
        <button type="submit" name="adminButton" value="Flop">Flop</button>
        <button type="submit" name="adminButton" value="Turn">Turn</button>
        <button type="submit" name="adminButton" value="River">River</button>
        <button type="submit" name="adminButton" value="Switch Blinds">Switch Blinds</button>
        <h1><%= deck.stck.length %></h1>


    </form>

</body>
</html>